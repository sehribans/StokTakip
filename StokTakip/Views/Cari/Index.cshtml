@model List<TblCari>

<div class="card">
    <div class="d-flex justify-content-between">
        <h5 class="card-header">Cari Listesi</h5>
       
    </div>


    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>UNVAN</th>
                    <th>TELEFON</th>
                    <th>E-MAİL</th>
                    <th>ADRES</th>
                    <th>BAKİYE</th>
                    <th>OLUŞTURMA TARİHİ</th>
                    <th>İŞLEMLER</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {

                    <tr>
                        <a href="Cari/CariDetay/@item.Id" style="cursor:pointer">
                        <td>@item.Unvan</td>
                        <td>@item.Telefon</td>
                        <td>@item.Eposta</td>
                        <td>@item.Adres</td>
                        <td>
                            <span class="badge @(item.Bakiye>0 ? "text-success" : "text-danger")  me-1">@(item.Bakiye > 0 ? "+" : "-")@item.Bakiye </span>
                        </td>
                        <td>@item.OlusturmaTarihi</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Cari/CariForm/@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="/Cari/Sil/@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td> 
                        </a>
                    </tr>
                   
                }




            </tbody>
        </table>
    </div>
</div>